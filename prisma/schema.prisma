// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  uuid      String    @id
  firstname String
  lastname  String
  photo     String?
  password  String
  email     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  posts     Post[]
  comments  Comment[]

  @@map("tb_users")
}

model Post {
  uuid        String    @id
  name        String
  description String?   @db.Text()
  likes       Int       @default(0)
  imageUrl    String
  user        User      @relation(fields: [userUuid], references: [uuid])
  userUuid    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  tags        Tag[]
  comments    Comment[]
}

model Comment {
  uuid      String   @id
  body      String   @db.Text()
  likes     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  postUuid  String
  userUuid  String
  post      Post     @relation(fields: [postUuid], references: [uuid])
  user      User     @relation(fields: [userUuid], references: [uuid])
}

model Tag {
  uuid     String  @id
  name     String
  postUuid String?
  post     Post?   @relation(fields: [postUuid], references: [uuid])
}
